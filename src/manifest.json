{
  "manifest_version": 2,
  "name": "Recipe Filter",
  "short_name": "Recipe Filter",
  "version": "0.2",
  "icons": {
          "128": "img/icon-128.png"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "options_ui": {
    "page": "html/options.html"
  },
  "browser_action": {
    "default_title": "Recipe Filter",
    "default_icon": "img/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "css": ["css/recipe_filter.css"],
      "js": ["js/jquery-3.2.1.min.js", "js/main.js"]
    }
  ]
}
